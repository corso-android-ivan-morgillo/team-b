<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/top_round_border"
    android:padding="8dp">


    <GridLayout xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/alcoholic_glass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:orientation="horizontal"
        android:rowCount="1"
        android:useDefaultMargins="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/glass_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bicchiere"
                android:layout_gravity="start|top"
                style="@style/firasans_bold"
                android:fontFamily="@font/firasans_bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/glass_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Nome Bicchiere "
                android:layout_gravity="start|top"
                style="@style/firasans_light"
                android:fontFamily="@font/firasans_light"

                android:textSize="14sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1">

            </Space>

            <TextView
                android:id="@+id/alcoholic_type_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/alcolico"
                android:layout_gravity="end|top"
                style="@style/firasans_bold"
                android:fontFamily="@font/firasans_bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/alcoholic_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="si/no"
                android:layout_gravity="start|top"
                android:fontFamily="@font/firasans_light"
                style="@style/firasans_light"
                android:textSize="14sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>


    </GridLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="#7f7f7f"
        android:alpha="0.3" />
</LinearLayout>
