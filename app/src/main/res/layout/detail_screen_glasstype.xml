<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alcoholic_glass"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:columnCount="4"
    android:orientation="horizontal"
    android:rowCount="1"
    android:useDefaultMargins="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/glass_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bicchiere: "
            android:layout_gravity="start|top"
            android:padding="10dp" />

        <TextView
            android:id="@+id/glass_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Nome Bicchiere "
            android:layout_gravity="start|top"
            android:padding="10dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/alcoholic_type_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alcolico: "
            android:layout_gravity="end|top"
            android:padding="10dp" />

        <TextView
            android:id="@+id/alcoholic_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="si/no"
            android:layout_gravity="start|top"
            android:padding="10dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>


</GridLayout>
