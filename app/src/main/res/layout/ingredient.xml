<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:backgroundTint="#07000000"
    android:layout_marginTop="4dp"
    android:layout_marginStart="8dp">

    <TextView
        android:id="@+id/ingredient_item_name"
        style="@style/firasans_bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/firasans_bold"
        android:layout_marginEnd="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/ingredient_item_quantity"
        tools:text="nome ingrediente"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/ingredient_item_quantity"
        style="@style/firasans_light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/firasans_light"
        android:layout_marginEnd="28dp"
        app:layout_constraintTop_toTopOf="@id/ingredient_item_name"
        app:layout_constraintBottom_toBottomOf="@id/ingredient_item_name"
        app:layout_constraintEnd_toEndOf="parent"
